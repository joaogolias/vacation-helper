            android:id="@+id/textView2" android:layout_marginTop="168dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/app_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView3" android:layout_marginTop="168dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="188dp"
